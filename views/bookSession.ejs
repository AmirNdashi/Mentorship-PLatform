<!DOCTYPE html>
<html lang="en">
<head>
    <title>Book a Session</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-300 min-h-screen flex flex-col">
    <nav class="bg-blue-500 text-white p-4">
        <div class="container mx-auto flex justify-between">
            <h1 class="text-xl font-bold">Book a Mentorship Session</h1>
            <a href="/dashboard" class="bg-gray-700 px-3 py-1 rounded">Back</a>
        </div>
    </nav>

    <div class="container mx-auto mt-6 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Select a Mentor</h2>
        <form action="/book-session" method="POST" class="space-y-4">
            <label class="block">Mentor:</label>
            <select name="mentorId" required class="border p-2 w-full rounded">
                <% mentors.forEach(mentor => { %>
                    <option value="<%= mentor._id %>"><%= mentor.name %></option>
                <% }); %>
            </select>

            <label class="block">Date & Time:</label>
            <input type="datetime-local" name="date" required class="border p-2 w-full rounded">

            <button type="submit" class="bg-blue-500 text-white p-2 rounded w-full">Book Session</button>
        </form>
    </div>
</body>
</html>
