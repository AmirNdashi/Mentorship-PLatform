<!DOCTYPE html>
<html lang="en">
<head>
    <title>Scheduled Sessions</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-300 min-h-screen flex flex-col">
    <nav class="bg-blue-500 text-white p-4">
        <div class="container mx-auto flex justify-between">
            <h1 class="text-xl font-bold">Your Sessions</h1>
            <a href="/dashboard" class="bg-gray-700 px-3 py-1 rounded">Back</a>
        </div>
    </nav>

    <div class="container mx-auto mt-6 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Upcoming Sessions</h2>
        <% if (sessions.length === 0) { %>
            <p>No upcoming sessions.</p>
        <% } else { %>
            <ul>
                <% sessions.forEach(session => { %>
                  <li class="border p-4 mb-2 rounded bg-gray-200">
                    <strong>With:</strong> <%= session.mentor.name %> <br>
                    <strong>Date:</strong> <%= session.date.toDateString() %> <br>
                    
                    <% if (session.completed) { %>
                      <a href="/feedbackForm/<%= session._id %>" class="bg-blue-500 text-white px-3 py-1 rounded">Give Feedback</a>
                    <% } else { %>
                      <span class="text-gray-500">Session Not Completed</span>
                    <% } %>
                  </li>
                <% }) %>
              </ul>
        <% } %>
    </div>
</body>
</html>
